<div class="w3-container w3-content w3-center w3-padding-64" style="max-width:800px" id="band">
    {{#game_over}}
        <h2 class="w3-wide">Fin del Juego</h2>
        {{#out_of_time}}
            <h1>Te quedaste sin tiempo. ¡Has perdido!</h1>
        {{/out_of_time}}
        {{^out_of_time}}
            <h1>Has respondido incorrectamente. ¡Has perdido!</h1>
        {{/out_of_time}}
        <a href="/partida/reset" class="w3-button w3-light-grey">Volver a Jugar</a>
    {{/game_over}}

    {{#no_more_questions}}
        <h2 class="w3-wide">¡Felicitaciones!</h2>
        <h1>Has respondido todas las preguntas correctamente.</h1>
        <a href="/partida/reset" class="w3-button w3-light-grey">Volver a Jugar</a>
    {{/no_more_questions}}

    {{^game_over}}
        {{^no_more_questions}}
            <div>Tiempo restante: <span id="time">00:30</span></div>
            <h2 class="w3-wide">Pregunta</h2>
            <h1>{{pregunta.contenido}}</h1>
            <h2>Respuestas:</h2>
            <form action="/partida/answer" method="post">
                {{#respuestas}}
                    <button type="submit" name="respuesta_id" value="{{id}}" class="w3-button w3-light-grey w3-margin">{{contenido}}</button>
                {{/respuestas}}
                <input type="hidden" id="timerValue" name="timerValue">
            </form>
        {{/no_more_questions}}
    {{/game_over}}
</div>
<script>
    function startTimer(duration, display, timerValue) {
        let startTime = localStorage.getItem('startTime');
        let timer = duration;

        if (startTime) {
            let elapsed = Math.floor((Date.now() - parseInt(startTime)) / 1000);
            timer = duration - elapsed;
            if (timer < 0) timer = 0;
        } else {
            localStorage.setItem('startTime', Date.now());
        }

        let minutes, seconds;
        let interval = setInterval(function () {
            minutes = parseInt(timer / 60, 10);
            seconds = parseInt(timer % 60, 10);

            minutes = minutes < 10 ? "0" + minutes : minutes;
            seconds = seconds < 10 ? "0" + seconds : seconds;

            display.textContent = minutes + ":" + seconds;
            timerValue.value = timer;

            if (timer > 0) {
                timer--;
            } else {
                clearInterval(interval);
                localStorage.removeItem('startTime');
            }
        }, 1000);
    }

    window.onload = function () {
        var duration = 30; // Duración en segundos
        var display = document.querySelector('#time');
        var timerValue = document.querySelector('#timerValue');

        // Inicializar el temporizador antes de llamar a startTimer
        let startTime = localStorage.getItem('startTime');
        if (startTime) {
            let elapsed = Math.floor((Date.now() - parseInt(startTime)) / 1000);
            let timer = duration - elapsed;
            if (timer < 0) timer = 0;
            let minutes = parseInt(timer / 60, 10);
            let seconds = parseInt(timer % 60, 10);
            minutes = minutes < 10 ? "0" + minutes : minutes;
            seconds = seconds < 10 ? "0" + seconds : seconds;
            display.textContent = minutes + ":" + seconds;
        }

        startTimer(duration, display, timerValue);
    };
</script>

